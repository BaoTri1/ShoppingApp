<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblTiltle_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Chọn phương thức thanh toán"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnPaymentnomal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Thanh toán khi nhận hàng"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_payments_24"
        android:layout_below="@+id/lblTiltle_method"
        android:drawablePadding="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/btnPaymentonline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Thanh toán bằng thẻ tín dụng"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_payment_24"
        android:layout_below="@+id/btnPaymentnomal"
        android:drawablePadding="10dp"
        android:layout_marginStart="10dp"/>

</RelativeLayout>