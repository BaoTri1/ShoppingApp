<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutMethod">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtName_PriceMethod"
        android:textSize="18sp"
        android:textColor="@color/color_gia"
        android:text="Giao hàng nhanh - 40.000d"
        android:textStyle="bold"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTimeOrder"
        android:textSize="15sp"
        android:layout_below="@+id/txtName_PriceMethod"
        android:textColor="@color/black"
        android:text="Thời gian nhận hàng dự kiến từ "
        android:padding="10dp"/>

</RelativeLayout>